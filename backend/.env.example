# Mode (test or production)
MODE=production

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/pokemon_go_db

# SendGrid Email (Render 클라우드 서버용)
# SendGrid에서 API 키 발급: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@pokemongo-tracker.com
TO_EMAIL=treehi1@gmail.com

# Redis (for Celery)
REDIS_URL=redis://localhost:6379/0

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Crawler Settings
CRAWLER_INTERVAL_MINUTES=30
POKEMONGO_NEWS_URL=https://pokemongolive.com/en/post/

# OCR Settings (optional)
TESSERACT_CMD=/usr/bin/tesseract
